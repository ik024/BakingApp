<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context="com.ik.bakingapp.recipeDetail.RecipeDetailListActivity">

    <include android:id="@+id/layout_offline"
        layout="@layout/offline_layout"
        android:visibility="gone"/>

    <fragment
        android:id="@+id/frag_recipe_detail"
        class="com.ik.bakingapp.recipeDetail.RecipeDetailListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_detail_container"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent"/>
</LinearLayout>
